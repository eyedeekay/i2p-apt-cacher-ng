/var/log//apt-cache*.log {
        su  
        size 10M
        missingok
        rotate 7
        compress
        delaycompress
        notifempty
        create
        postrotate
                if [ -e /run/systemd/system ] ; then
                        if systemctl -q is-active  ; then systemctl kill --signal=USR1  ; fi
                elif [ -s /var/run//pid ] ; then
                        kill -s USR1 "$(cat /var/run//pid)" 2>/dev/null ||:
                fi
        endscript
}

/var/log//apt-cache*.err {
        su  
        daily
        notifempty
        missingok
        rotate 7
        compress
        delaycompress
        create
        postrotate
                if [ -e /run/systemd/system ] ; then
                        if systemctl -q is-active  ; then systemctl kill --signal=USR1  ; fi
                elif [ -s /var/run//pid ] ; then
                        kill -s USR1 "$(cat /var/run//pid)" 2>/dev/null ||:
                fi
        endscript
}


